# don't look for more .editorconfig files in parent directories
root = true


# default formatting for all file types
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.js]
indent_size = 2
indent_style = space

# formatting for markdown files
[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
